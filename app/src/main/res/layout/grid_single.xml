<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/grid_item_bg"
    app:cardBackgroundColor="@color/colorPrimary"
    app:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imgGrid"
            android:layout_width="@dimen/grid_icon_size"
            android:layout_height="@dimen/grid_icon_size"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/grid_icon_margin"
            android:layout_marginTop="@dimen/grid_icon_margin"
            android:src="@drawable/bill" />

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/imgGrid"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/grid_icon_margin"
            android:text="Bill"
            android:textAlignment="center"
            android:textColor="@color/grid_text_color"
            android:textSize="@dimen/grid_text_size" />

    </RelativeLayout>

</android.support.v7.widget.CardView>